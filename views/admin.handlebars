<div class="row">
    <div class="col-xs-12">
        <h3>Add a new tournament -> </h3>
        <form id="addTournamentForm" method="post" action="/tournament/add">
            <div class="form-group">
                <label>Tournament name</label>
                <input type="text" class="form-control" placeholder="Name"
                name="name">
            </div>
            <div class="form-group">
                <label>Date</label>
                <input type="date" class="form-control"
                placeholder="Date" name="date">
            </div>
            <div class="form-group">
                <label>Time</label>
                <input type="time" class="form-control"
                placeholder="Time" name="time">
            </div>
            <button type="submit" class="btn btn-default" id="addTournament">Add Tournament</button>
        </form>
    </div>
</div>


<h2>List of Tournaments</h2>
 <!-- List of Tournaments -->
    <div class="row">
        <div class="col-xs-12">
            <div class="" id="tournamentsList">
                {{#each tournament}}
                    <div class="tournamentData" id="{{this.id}}">
                        <p class="tournamentDate">Date: {{this.date}}</p>
                        <p class="tournamentTime">Time: {{this.time}}</p>
                        <button class="btn btn-lg btn-warning edit" id="edit{{this.id}}">Edit</button>
                        <button type='submit' class='update btn btn-success'>Update</button>
                        <button type='submit' class='delete btn btn-danger'>Delete</button>
                        <button class='undoEditClick btn btn-warning'><i class='fa fa-undo' aria-hidden='true'></i></button>
                        <button class="btn btn-lg btn-info checkIn" id="checkInPlayers{{this.id}}">Check in players</button>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    

