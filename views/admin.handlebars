<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3>Add a new tournament -> </h3>
            <form id="addTournamentForm" method="post" action="/add/tournament">
                <div class="form-group">
                    <label>Tournament name</label>
                    <input type="text" class="form-control" placeholder="Name"
                    name="name">
                </div>
                <div class="form-group">
                    <label>Date</label>
                    <input type="date" class="form-control"
                    placeholder="Date" name="date">
                </div>
                <div class="form-group">
                    <label>Time</label>
                    <input type="time" class="form-control"
                    placeholder="Time" name="time">
                </div>
                 <div class="form-group hidden">
                    <input type="text" class="form-control"
                    value="1" name="active_flag">
                </div>
                <button type="submit" class="btn btn-default" id="addTournament">Add Tournament</button>
            </form>
        </div>
    </div>


    <h2>List of Tournaments</h2>
    <!-- List of Tournaments -->
    <div class="row">
        <div class="col-xs-12">
            <div class="" id="tournamentsList">
                {{#each tournament}}
                    <form>
                        <div class="tournamentData" id="{{this.id}}">
                            <p>Name: <input class="non-editable editBoxes tournamentName" type="textbox" value="{{this.name}}"></p>
                            <p>Date: <input class="non-editable editBoxes tournamentDate" type="textbox" value="{{dateFormat this.date}}"></p>
                            <p>Time: <input class="non-editable editBoxes tournamentTime" type="textbox" value="{{timeFormat this.time}}"></p>
                            <button class="btn btn-warning edit" id="edit{{this.id}}">Edit</button>
                            <button type='submit' class='editButtons hidden update btn btn-success'>Update</button>
                            <button type='submit' class='editButtons hidden delete btn btn-danger'>Delete</button>
                            <button class='editButtons undoEditClick hidden btn btn-warning'><i class='fa fa-undo' aria-hidden='true'></i></button>
                        </div>
                    </form>
                        <a href="/checkin/{{this.id}}">
                        <button class="btn btn-info checkInPlayers">Check in players</button></a>
                    
                {{/each}}
            </div>
        </div>
    </div>
    
