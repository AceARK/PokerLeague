<h2>Hello {{userName}}!</h2>

<h3>List of Tournaments you have registered for</h3>
 <!-- List of Tournaments -->
<div class="row">
    <div class="col-xs-12">
        <div class="" id="tournamentsList">
            {{#each tournament}}
            	{{#if this.ofUser }}
                <div class="tournamentData" id="{{this.id}}">
                    <p class="tournamentDate">Date: {{this.date}}</p>
                    <p class="tournamentTime">Time: {{this.time}}</p>
                    <button class="btn btn-lg btn-danger unregister" id="unregister{{this.id}}">Unregister</button>
                </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<h3>Other tournaments</h3>
 <!-- List of Tournaments -->
<div class="row">
    <div class="col-xs-12">
        <div class="" id="tournamentsList">
            {{#each tournament}}
            	{{#unless this.ofUser }}
                <div class="tournamentData" id="{{this.id}}">
                <h4 class="tournamentName">{{inc @index}}. {{this.name}}</h4>
                    <p class="tournamentDate">Date: {{this.date}}</p>
                    <p class="tournamentTime">Time: {{this.time}}</p>
                    <button class="btn btn-lg btn-danger unregister" id="unregister{{this.id}}">Unregister</button>
                </div>
                {{/unless}}
            {{/each}}
        </div>
    </div>
</div>


